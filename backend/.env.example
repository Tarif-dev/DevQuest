# Backend Environment Variables

# Server Configuration
PORT=5000
NODE_ENV=development

# Database
DATABASE_URL=postgresql://username:password@localhost:5432/devquest

# JWT Secret
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Blockchain
ETHEREUM_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/your-api-key
PRIVATE_KEY=your-private-key-here
CONTRACT_PROJECT_REGISTRY=0x...
CONTRACT_PROJECT_ESCROW=0x...
CONTRACT_FEATURE_TASK=0x...
CONTRACT_PAYOUT_DISTRIBUTOR=0x...
NETWORK_ID=11155111

# IPFS
IPFS_API_URL=https://ipfs.infura.io:5001
IPFS_GATEWAY_URL=https://ipfs.io/ipfs/
IPFS_PROJECT_ID=your-infura-project-id
IPFS_PROJECT_SECRET=your-infura-project-secret

# GitHub
GITHUB_CLIENT_ID=your-github-oauth-client-id
GITHUB_CLIENT_SECRET=your-github-oauth-client-secret
GITHUB_WEBHOOK_SECRET=your-webhook-secret
GITHUB_ACCESS_TOKEN=your-github-personal-access-token

# CORS
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Lit Protocol
LIT_NETWORK=serrano
LIT_API_KEY=your-lit-api-key

# PYUSD Contract Address
PYUSD_CONTRACT_ADDRESS=0x...
